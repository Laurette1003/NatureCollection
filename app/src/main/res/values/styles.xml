<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Creer le composant titre par defaut. -->
    <style name="DefaultTextstyle">
        <item name="android:textColor">@color/lightGray</item>
        <item name="android:textSize">18dp</item>
        <item name="android:fontFamily">@font/kanit</item>
    </style>

    <!-- Creer le composant sous_titre par defaut. -->
    <style name="SubtitletTextstyle" parent="DefaultTextstyle">
        <item name="android:textColor">@color/darkGray</item>
    </style>

    <!-- Creer le composant titre par defaut. -->
    <style name="TitletTextstyle" parent="SubtitletTextstyle">
        <item name="android:textSize">24dp</item>
    </style>
</resources>